<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/estilos.css">

  <!-- maquetado -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

  <!-- Iconos -->

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <title>Certificado</title>
</head>

<body>
  <section class="certificado">
    <div class="content">
      <form action="/user/certificado" method="POST" id="formValid">
        <div class="buscador">
          <select name="tipoDocumento" id="selecionar" class="form-select" required>
            <option value="0" selected>Buscar por</option>
            <option value="1">DNI</option>
            <option value="2">CE</option>
            <option value="3">PASAPORTE</option>
            <option value="4">RUC</option>
          </select>
          <input type="text" name="dni" id="dni" class="form-control mt-2">
          <button type="submit" id="busca" class="btn btn-primary mt-3 mb-5">Buscar</button>

        </div>
      </form>

      <div class="descripcion conten_table d-flex justify-content-center align-items-center flex-column">
        <h2 class="mb-4 fs-1">Certificado</h2>
        <table class="table table-bordered">
          <thead class="table-dark">
            <tr>
              <td id="valor_selector">Documento</td>
              <td>Nombre</td>
              <td>Nacionalidad</td>
              <td>Certificado</td>
              <td>Codigo</td>
              <td>Fecha Emicion</td>
              <td>Fecha Vencimiento</td>
              <td>Descargar</td>
            </tr>
          </thead>
          <tbody>
            <% if (certificados.length> 0) { %>
              <% certificados.forEach(certificado=> { %>
                <tr>
                  <td>
                    <%= certificado.Documento %>
                  </td>
                  <td>
                    <%= certificado.NombreCompleto %>
                  </td>
                  <td>
                    <%= certificado.Nacionalidad %>
                  </td>
                  <td>
                    <%= certificado.nCertificado %>
                  </td>
                  <td>
                    <%= certificado.Codigo %>
                  </td>
                  <td>
                    <%= formatDate(certificado.FechaEmicion) %>
                  </td> <!-- AquÃ­ se utiliza formatDate -->
                  <td>
                    <%= formatDate(certificado.FechaVencimiento) %>
                  </td>
                  <td>
                    <a href="/user/certificado/download/<%= certificado.id_Certificado %>" class="btn btn-success">
                      <i class="bi bi-download me-2"></i>
                      Descargar
                    </a>
                  </td>
                </tr>
                <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="8">No se encontraron certificados.</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
        <div id="pagination-container"></div>

        
      </div>
    </div>
    </div>
  </section>

  <script src="/js/utils/utils_date.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/js/script.js"></script>
  <script src="/js/manejo_form.js"></script>
</body>

</html>